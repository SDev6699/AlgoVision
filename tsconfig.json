{
  "types": ["node"],
  "compilerOptions": {
    "target": "ESNext",                         // Specify ECMAScript target version
    "useDefineForClassFields": true,            // Use the new 'useDefineForClassFields' flag
    "module": "ESNext",                         // Specify module code generation
    "moduleResolution": "Node",                 // Use Node.js module resolution
    "strict": true,                             // Enable all strict type-checking options
    "jsx": "preserve",                          // Preserve JSX syntax (for Vue files)
    "sourceMap": true,                          // Generate source map files
    "resolveJsonModule": true,                  // Include modules imported with '.json' extension
    "esModuleInterop": true,                    // Enable interoperability between CommonJS and ES Modules
    "lib": ["ESNext", "DOM"],                   // Include standard library declarations
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "allowSyntheticDefaultImports": true,       // Allow default imports from modules with no default export
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
